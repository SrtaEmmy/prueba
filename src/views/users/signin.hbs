{{#if error}} {{!-- le decimos que si existe "error" haga lo siguiente (crear una alerta) --}} 
<div class="alert alert-warning alert-dismissible fade show" role="alert">
    {{error}} {{!-- este "error" es el que hemos configurado en indes.js(server) y hemos programado en passport.js --}}
    <button type="button" class="close" data-bs-dismiss="alert" aria-label="Close">X</button>
</div>
{{/if}}


<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card mt-4 text-center">
            <div class="card-header">
            <h1>Login</h1>
            </div>
            {{!-- <img src="/src/images/piedra.png" alt="logo" class="rounded-circle"> --}}
            <div class="card-body">
                <form action="/users/signin" method="post">
                    <div class="form-group">
                        <input type="text" name="email" placeholder="@email" autofocus class="form-control">
                    </div>
                    <div class="form-group">
                        <input type="password" name="password" placeholder="password***" class="form-control">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-block" type="submit">SignIn</button>
                    </div>
                </form>
                    <a  href="/users/signup">Don't have an account? </a>
            </div>
        </div>
    </div>
</div>